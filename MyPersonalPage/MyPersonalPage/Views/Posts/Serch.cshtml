@using PagedList
@using PagedList.Mvc


@using MyPersonalPage.Models

@model PagedList<Post>
@{
    ViewBag.Title = "Serch";
}
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css"/>
<style> 


    .wrapper {
        height: 75px;
        max-height: 75px;
        word-wrap:hyphenate;
    }

    p,ul,li{
        line-height:normal;
        font-size: 12px;
    }
    .btn-sm {
  display: inline-block;
  padding: 2px 4px;
  margin-bottom: 0;
  margin-top:auto;
  font-size: 13px;
  font-weight: normal;
  line-height: 1.42857143;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  -ms-touch-action: manipulation;
  touch-action: manipulation;
  cursor: pointer;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
  background-image: none;
  border: 1px solid transparent;
  border-radius: 4px;
}
</style>
<section id="blog" class="white-bg padding-top-bottom-short">

    <div class="container">
        
        <div class="row">

            <!-- Blog Entries Column -->
            <div class="col-md-8">

                <h2>
                    My Blog
                    <small>
                        @if (User.IsInRole("Admin"))
                        {
                            @*<a href=""style="text-align:left"> Create a Post</a>*@
                            <span style="text-align:right; font-size:14px">
                                @Html.ActionLink("Create New", "Create")
                            </span>
                        }
                    </small>
                </h2>

                <!-- First Blog Post -->
                @foreach(var post in Model)
                {
                <h3>
                    <a href="@Url.Action("Details",new {slug = post.Slug})">@post.Title</a>
                </h3>
                <p>
                    by <a href="">Ria Manglani</a>
                </p>
                    <p style="font-size:12px"><span class="glyphicon glyphicon-time"></span>@post.Created.DateTime.ToLongDateString()</p>
                <hr>
                    if (post.MediaURL != null)
                    {
                        <img class="img-responsive" src="@post.MediaURL" alt="">
                        <hr>
                    }
                    <div class="wrapper">
                        <p>@Html.Raw(post.Body)</p>
                    </div>
                <a class="btn-sm btn-primary" href="@Url.Action("Details",new { slug = post.Slug})"> Read More <span class="glyphicon glyphicon-chevron-right"></span></a>

                <hr>
                }
                
                <!-- Pager -->

                Page @(Model.PageCount < Model.PageNumber ? 0 :Model.PageNumber) of @Model.PageCount
                @Html.PagedListPager(Model, page => Url.Action("Serch", new {page}))
               
            </div>

            <!-- Blog Sidebar Widgets Column -->
            <div class="col-md-4">

                <!-- Blog Search Well -->
                <div class="well">
                    <h4>Blog Search</h4>
                    <form action="@Url.Action("Serch")" method ="post">
                        <div class="input-group">
                            <input type="text" name="Keywords" class="form-control">
                            <span class="input-group-btn">
                                <button class="btn-sm btn-default" type="submit">
                                    <span class="glyphicon glyphicon-search"></span>
                                </button>
                            </span>
                        </div>
                    </form>
                    <!-- /.input-group -->
                </div>

                <!-- Blog Categories Well -->
                <div class="well">
                    <h4>Blog Categories</h4>
                    <div class="row">
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li>
                                    <a href="#">Category Name</a>
                                </li>
                                <li>
                                    <a href="#">Category Name</a>
                                </li>
                                <li>
                                    <a href="#">Category Name</a>
                                </li>
                                <li>
                                    <a href="#">Category Name</a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.col-lg-6 -->
                        <div class="col-lg-6">
                            <ul class="list-unstyled">
                                <li>
                                    <a href="#">Category Name</a>
                                </li>
                                <li>
                                    <a href="#">Category Name</a>
                                </li>
                                <li>
                                    <a href="#">Category Name</a>
                                </li>
                                <li>
                                    <a href="#">Category Name</a>
                                </li>
                            </ul>
                        </div>
                        <!-- /.col-lg-6 -->
                    </div>
                    <!-- /.row -->
                </div>
                               
            </div>

        </div>

    </div>

</section>
<script src="~/scripts/jquery.dotdotdot.js" type="text/javascript"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $(".wrapper").dotdotdot({
            window: 'watch',
            wrap: 'word',
            height: null,
            
        });
    });

</script>