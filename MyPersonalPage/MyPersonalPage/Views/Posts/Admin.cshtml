@model IEnumerable<MyPersonalPage.Models.Post>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/admin.css" rel="stylesheet" />

<section id="blog" class="white-bg padding-top-bottom-short">

    <div class="container">
        <h2>Index</h2>

        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table id="table1">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Created)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Updated)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cat)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Body)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.MediaURL)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Slug)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @item.Created.DateTime.ToLongDateString()
                        </td>
                        @if (item.Updated != null)
                        {
                            <td>
                                @item.Updated.Value.DateTime.ToLongDateString()
                            </td>
                        }
                        else
                        {
                            <td>
                                @item.Updated
                            </td>
                        }
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cat)
                        </td>
                        <td>
                            <div class="rap">
                                @Html.Raw(item.Body)
                            </div>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MediaURL)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Slug)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { slug = item.Slug }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        </div>
    </section>

@section scripts{
<script src="~/scripts/jquery.dotdotdot.js" type="text/javascript"></script>
<script type="text/javascript">

    $(document).ready(function () {
        $('#table1').DataTable();

        $(".rap").dotdotdot({
            window: 'watch',
            wrap: 'word'
 
        });
    });

</script>
    
    }