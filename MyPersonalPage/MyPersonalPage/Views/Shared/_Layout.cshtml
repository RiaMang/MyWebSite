
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- ======
    CSS
    =============================================== -->
    
    
    <script type="text/javascript" src="~/SynHi/scripts/shCore.js"></script>

    <script type="text/javascript" src="~/SynHi/scripts/shBrushJScript.js"></script>

    <link href="~/SynHi/styles/shCore.css" rel="stylesheet" type="text/css" />
    <link href="~/SynHi/styles/shThemeDefault.css" rel="stylesheet" type="text/css" />
    <link href="~/css/my.css" rel="stylesheet" type="text/css" />
    
    <!-- ==============================================
    Fonts
    =============================================== -->

<link href='https://fonts.googleapis.com/css?family=Roboto+Slab:400,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Titillium+Web:400,300,300italic,200,400italic,600,600italic' rel='stylesheet' type='text/css'>
   
    <script type="text/javascript" src="~/js/libs/modernizr.min.js"></script>

    <title>@ViewBag.Title </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/css/font-awesome.css">
    <link rel="stylesheet" href="~/css/flexslider.css">
    <link rel="stylesheet" href="~/css/meflat-blue.css">

    <link href="~/Content/DataTables-1.10.9/media/css/jquery.dataTables.min.css" rel="stylesheet" />
    <script src='https://www.google.com/recaptcha/api.js'></script>
</head>
<body data-spy="scroll" data-target="#main-nav" data-offset="400">
    <!-- ==============================================
    MAIN NAV
    =============================================== -->
    <div id="main-nav" class="navbar navbar-fixed-top @if(ViewBag.IsHome != true) {<text>scrolled</text> }">
        <div class="container">

            <div class="navbar-header">

                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#site-nav">
                    <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </button>

                <!-- ======= LOGO (for small screens)========-->
                <a class="navbar-brand visible-xs scrollto" href="#home">RM</a>

            </div>

            <div id="site-nav" class="navbar-collapse collapse">
                <ul id="top-menu" class="nav navbar-nav">
                    <li> <!--class=@{ViewContext.RouteData.Values["action"].ToString() == "Household" ? "active" : ""}-->
                        @Html.ActionLink("What I Do", "Resume", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("About Me", "About", "Home")
                    </li>
                    <li>
                        @Html.ActionLink("My Works", "Portfolio", "Home")
                    </li>
                    <li id="logo">
                        <a href="@Url.Action("Index", "Home" )" >
                            <h1>R<span>M</span></h1>
                        </a>
                    </li>
                    
                    <li>
                        @Html.ActionLink("Contact Me", "Index", "Contacts")
                    </li>
                    @if(User.IsInRole("Admin"))
                    {
                    <li>
                        @Html.ActionLink("Admin", "Admin", "Posts")
                    </li>
                    }
                    <li>
                        @Html.ActionLink("Blog", "Index", "Posts")
                    </li>
                    <li>
                        @Html.Partial("_LoginPartial")
                    </li>
                </ul>
              
            </div><!--End navbar-collapse -->

        </div><!--End container -->

    </div><!--End main-nav -->
    <section id="">

        <div class="">
            <div>
                @RenderBody()

            </div>

        </div>

    </section>       
            
    
        
        @*<footer id="main-footer" class="dark-bg light-typo">

            <div class="container">
                
                    <div class="row">
                        <div class="col-sm-6 text-right scrollimation fade-in">
                        <p id="ftr" style="font-size: 12px">&copy;@DateTime.Now.Year - RM</p>
                        </div>
                </div>
            </div>
        </footer>*@
  

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <script src='~/js/jquery.easing.1.3.min.js'></script>
    <script src='~/js/jquery.scrollto.js'></script>
    <script src="~/js/jquery.fittext.js"></script>
    <script src='~/js/jquery.flexslider.min.js'></script>
    <script src='~/js/jquery.masonry.js'></script>
    <script src="~/js/waypoints.min.js"></script>
    <script src="~/js/jquery.label_better.min.js"></script>
    <script src="~/js/jquery.easypiechart.js"></script>
    <script src="~/js/contact.js"></script>
    <script src="~/js/meflat.js"></script>
    <script src="~/Scripts/DataTables-1.10.9/media/js/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTables-1.10.9/extensions/Responsive/js/dataTables.responsive.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
