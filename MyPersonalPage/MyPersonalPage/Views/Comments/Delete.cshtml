@model MyPersonalPage.Models.Comment
@{
    ViewBag.Title = "Delete";
}
<style>
    dd, dt, input {
        line-height: 200%;
        font-size: 12px;
    }
</style>
<section id="blog" class="white-bg padding-top-bottom-short">

    <div class="container">
      
        <h3>Are you sure you want to delete this Comment?</h3>
        <div>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model=>model.Created)
                </dt>

                <dd>
                    @Model.Created.DateTime.ToLongDateString()
                </dd>
                
                @if(Model.Updated != null)
                { 
                <dt>
                   @Html.DisplayNameFor(model => model.Updated) 
                </dt>
                
                <dd>
                    @Model.Updated.Value.DateTime.ToLongDateString()
                </dd>
                
                <dt>
                    @Html.DisplayNameFor(model => model.UpdatedReason)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UpdatedReason)
                </dd>
                }
                <dt>
                    @Html.DisplayNameFor(model => model.Body)
                </dt>

                <dd>
                    @Html.Raw(Model.Body)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Delete" class="btn btn-default" /> 
                    </div>
                </div>
            }
        </div>


    </div>
</section>